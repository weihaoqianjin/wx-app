.perfectInfo-box{
    position:absolute;
    width:100%;
    height:100%;
    top:0;
}
.mask{
    background: #818181;
    opacity: 0.7;
    width:100%;
    height:100%;
    position: absolute;
    top:0;
    left: 0;
    z-index: 10;
}
.inner-box{
    position: relative;
    margin:0 auto;
    margin-top: 104px;
    width:270px;
    padding-top: 14px;
    border-radius: 4px;
    background-color: #fff;
    z-index: 100;
}
.content-bar .dd{
    display:flex;
    align-items: center;
    width:100%;
}
.title{
    line-height: 40px;
    font-weight: 700;
    color: #222;
    text-align: center;
}
.content-bar{
    font-size: 14px;
    border-bottom: 1px solid #e6e6e6;
}
.label{
    padding-left: 35px;
    width: 68px;
    color: #333;
    line-height: 38px;
}
.submit{
    line-height: 48px;
    color: #818181;
    border-radius: 0 0 6px 6px;
    background-color: #ddd;
    width:100%;
    text-align: center;
}
.close{
    position: absolute;
    top: 10px;
    right: 10px;
    width: 24px;
    height: 24px;
    background-image: -webkit-linear-gradient(left,#c2c2c2,#c2c2c2),-webkit-linear-gradient(top,#c2c2c2,#c2c2c2);
    background-repeat: no-repeat,no-repeat;
    background-position: 3px center, center 3px;
    background-size: 18px 2px, 2px 18px;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.fit{
    color: #45daf8;
    background-color: #fff;
}